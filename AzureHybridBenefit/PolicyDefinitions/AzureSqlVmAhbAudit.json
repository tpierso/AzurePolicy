{
  "mode": "All",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.SqlVirtualMachine/SqlVirtualMachines"
        },
        {
          "field": "Microsoft.SqlVirtualMachine/SqlVirtualMachines/sqlImageSku",
          "in": [
            "Standard",
            "Enterprise"
          ]
        },
        {
          "field": "Microsoft.SqlVirtualMachine/SqlVirtualMachines/sqlServerLicenseType",
          "notEquals": "AHUB"
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]"
    }
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Azure Hybrid Benefit should be enabled for SQL Server Virtual Machines."
      },
      "allowedValues": [
        "Audit",
        "Deny",
        "Disabled"
      ],
      "defaultValue": "Audit"
    }
  }
}