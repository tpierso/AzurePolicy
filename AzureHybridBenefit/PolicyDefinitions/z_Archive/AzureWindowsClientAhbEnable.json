{
  "mode": "Indexed",
  "policyRule": {
    "if": {
      "allOf": [
        {
          "field": "type",
          "equals": "Microsoft.Compute/virtualMachines"
        },
        {
          "field": "Microsoft.Compute/imagePublisher",
          "equals": "[parameters('imagePublisher')]"
        },
        {
          "field": "Microsoft.Compute/imageOffer",
          "in": "[parameters('imageOffers')]"
        },
        {
          "field": "Microsoft.Compute/virtualMachines/licenseType",
          "notEquals": "[parameters('licenseType')]"
        }
      ]
    },
    "then": {
      "effect": "[parameters('effect')]",
      "conflictEffect": "Audit",
      "operations": {
        "operation": "addOrReplace",
        "field": "Microsoft.Compute/virtualMachines/licenseType",
        "value": "[parameters('licenseType')]"
      }
    }
  },
  "parameters": {
    "effect": {
      "type": "String",
      "metadata": {
        "displayName": "Effect",
        "description": "Enable or disable the execution of the policy"
      },
      "allowedValues": [
        "Modify",
        "Disabled"
      ],
      "defaultValue": "Modify"
    },
    "imageOffers": {
      "type": "Array",
      "metadata": {
        "displayName": "Image Offer",
        "description": "OS version eligible for Azure Hybrid Benefit."
      },
      "allowedValues": [
        [
          "Windows-10",
          "Windows-11"
        ],
        [
          "WindowsServer"
        ]
      ],
      "defaultValue": [
        "Windows-10",
        "Windows-11"
      ]
    },
    "imagePublisher": {
      "type": "String",
      "metadata": {
        "displayName": "Image Publisher",
        "description": "OS version eligible for Azure Hybrid Benefit."
      },
      "allowedValues": [
        "MicrosoftWindowsServer",
        "MicrosoftWindowsDesktop"
      ],
      "defaultValue": "MicrosoftWindowsDesktop"
    },
    "licenseType": {
      "type": "String",
      "metadata": {
        "displayName": "License Type",
        "description": "The Windows license used based on the image publisher and offer."
      },
      "allowedValues": [
        "Windows_Server",
        "Windows_Client"
      ],
      "defaultValue": "Windows_Client"
    }
  }
}